<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - Hotel Management System</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Areas/Dashboard/Content/assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Areas/Dashboard/Content/css/styles.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">
                <i class="fa fa-hotel mr-1"></i> HMS</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","AccomodationType")">
                    <i class="fa fa-building mr-1"></i> AccomodationType
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","AccomodationPackages")">
                    <i class="fa fa-box mr-1"></i> Accomodation Pakages
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Accomodation")">
                    <i class="fa fa-bookmark mr-1"></i> Accomodation
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Roles")">
                    <i class="fa fa-users mr-1"></i> Roles
                </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index","Users")">
                    <i class="fa fa-users mr-1"></i> Users
                </a>
            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="fa fa-bars"></i>
                    </button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out mr-1"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "", }, FormMethod.Post, new { id = "logoutForm", @class = "nav-right" }))
    {
        @Html.AntiForgeryToken()
    }

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Areas/Dashboard/Content/js/scripts.js"></script>
</body>
</html>
